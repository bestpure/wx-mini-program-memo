/* pages/new/new.wxss */

.new {
}

.new .header {
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #f5f5f5;
  width: 100%;
  height: 38px;
  line-height: 38px;
  border-bottom: 1px dashed #ccc;
}

.new .header .time {
  margin-left: 15px;
  font-size: 14px;
  color: #666;
}

.new .header .save {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 70px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  color: #ff9700;
}

.new .header .cancel {
  position: absolute;
  right: 70px;
  top: 0px;
  width: 70px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  color: #555;
}

.new .body {
  margin-top: 38px;
  padding: 10px 15px 10px 15px;
}

.new .body .title {
  border-bottom: 1px solid #ccc;
  padding-bottom: 5px;
}

.new .body .content {
  margin-top: 5px;
}

.new .body .content textarea {
  width: 100%;
  max-width: 100%;
}
