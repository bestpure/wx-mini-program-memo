/* pages/new/new.wxss */

.new {
}

.new .header {
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #f5f5f5;
  width: 100%;
  height: 38px;
  line-height: 38px;
  border-bottom: 1px dashed #ccc;
}

.new .header .save {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 80px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  color: #ff9700;
}

.new .header .delete {
  position: absolute;
  right: 80px;
  top: 0px;
  width: 80px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  color: #f00;
}

.new .header .cancel {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 80px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  color: #555;
}

.new .body {
  margin-top: 38px;
  padding: 10px 15px 10px 15px;
}

.new .body .time {
  font-size: 13px;
  color: #9A9A9A;
  margin-bottom: 4px;
}

.new .body .title {
  color: #000;
  font-weight: 550;
  border-bottom: 1px solid #ccc;
  padding-bottom: 5px;
}

.new .body .content {
  color: #555;
  margin-top: 5px;
}

.new .body .content textarea {
  width: 100%;
  max-width: 100%;
}
