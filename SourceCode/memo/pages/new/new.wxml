<!--pages/new/new.wxml-->
<view class="new">
  <view class='header'>
    <view class='time'>
      {{time}}
    </view>
    <view class='save' bindtap="save">
      <i class="fa fa-save"></i>
      保存
    </view>
  </view>
  <view class='body'>
    <view class='title'>
      <input bindinput="memoTitle" type="text" placeholder="请输入标题" focus="true" value="{{title}}" />
    </view>
    <view class='content'>
      <textarea bindinput="memoContent" placeholder="请输入备忘录内容" maxlength="-1" auto-height='true' value="{{content}}" />
    </view>
  </view>

</view>